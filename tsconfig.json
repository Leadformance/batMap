{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "module": "esnext",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "./src/index.ts", "./src/**/*"],
  "exclude": ["node_modules", "dist", "build", "src/plugins"]
}
